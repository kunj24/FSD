<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="container">
    <header>
      <h1><%= title %></h1>
      <p class="subtitle">I'd love to hear from you — send a quick message.</p>
    </header>

    <main>
      <% if (errors && errors.length) { %>
        <div class="error-card">
          <p><strong>Please fix the following:</strong></p>
          <ul>
            <% errors.forEach(function(e){ %>
              <li><%= e.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <% if (typeof success !== 'undefined') { %>
        <% if (success) { %>
          <div class="results-card">
            <h2>Message Sent</h2>
            <p>Thanks — your message was sent successfully.</p>
            <% if (previewUrl) { %>
              <p>Preview (dev): <a href="<%= previewUrl %>" target="_blank"><%= previewUrl %></a></p>
            <% } %>
          </div>
        <% } else { %>
          <div class="error-card">
            <p><strong><%= errorMessage || 'Failed to send message' %></strong></p>
          </div>
        <% } %>
      <% } %>

      <form method="POST" action="/contact" class="contact-form">
        <div class="form-group">
          <label for="name">Name</label>
          <input id="name" name="name" type="text" value="<%= formData.name || '' %>" required>
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input id="email" name="email" type="email" value="<%= formData.email || '' %>" required>
        </div>

        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" name="message" rows="6" required><%= formData.message || '' %></textarea>
        </div>

        <div class="action-buttons">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </main>

    <footer>
      <p>&copy; 2025 Kunj Mungalpara</p>
    </footer>
  </div>
</body>
</html>
