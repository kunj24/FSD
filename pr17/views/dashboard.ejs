<%- include('partials/head', { title: 'Dashboard - EduManager' }) %>
<body>
    <%- include('partials/navbar') %>
    <div class="main-container reveal fade-up">
        <div class="header-section reveal fade-in">
            <h1><i class="fas fa-graduation-cap"></i> EduManager</h1>
            <p>Professional Student Management System</p>
        </div>

        <% if (message) { %>
            <div class="message success">
                <i class="fas fa-check-circle"></i> <%= message %>
            </div>
        <% } %>

        <% if (error) { %>
            <div class="message error">
                <i class="fas fa-exclamation-triangle"></i> <%= error %>
            </div>
        <% } %>

        <div class="dashboard-layout">
            <div class="sidebar reveal fade-up">
                <div class="sidebar-header">
                    <h3 class="sidebar-title">
                        <i class="fas fa-chart-pie"></i> Overview
                    </h3>
                    <p class="sidebar-subtitle">Quick statistics and actions</p>
                </div>

                <div class="stats-container stagger">
                    <div class="stat-card">
                        <div class="stat-content">
                            <div class="stat-number"><%= students.length %></div>
                            <div class="stat-label">
                                <i class="fas fa-users"></i> Total Students
                            </div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-content">
                            <div class="stat-number"><%= students.filter(s => s.feesPaid).length %></div>
                            <div class="stat-label">
                                <i class="fas fa-check-circle"></i> Fees Paid
                            </div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-content">
                            <div class="stat-number"><%= students.filter(s => !s.feesPaid).length %></div>
                            <div class="stat-label">
                                <i class="fas fa-clock"></i> Pending Fees
                            </div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-content">
                            <div class="stat-number"><%= Math.round((students.filter(s => s.feesPaid).length / students.length) * 100) || 0 %>%</div>
                            <div class="stat-label">
                                <i class="fas fa-percentage"></i> Payment Rate
                            </div>
                        </div>
                    </div>
                </div>

                <div class="quick-actions">
                    <h4 class="actions-title">
                        <i class="fas fa-bolt"></i> Quick Actions
                    </h4>
                    <div class="action-buttons">
                        <a href="/add" class="add-student-btn">
                            <i class="fas fa-plus"></i> Add Student
                        </a>
                        <button class="quick-btn" onclick="exportData()">
                            <i class="fas fa-download"></i> Export CSV
                        </button>
                    </div>
                </div>
            </div>            <div class="main-content reveal fade-up">
                <div class="content-header">
                    <h2 class="content-title">
                        <i class="fas fa-users"></i> Student Directory
                    </h2>
                </div>

                <!-- Summary Cards -->
                <div class="summary-cards stagger">
                    <div class="summary-card">
                        <div class="summary-icon">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div class="summary-content">
                            <h3><%= students.length %></h3>
                            <p>Total Students</p>
                            <span class="trend positive">
                                <i class="fas fa-arrow-up"></i> Active
                            </span>
                        </div>
                    </div>
                    <div class="summary-card">
                        <div class="summary-icon success">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="summary-content">
                            <h3><%= students.filter(s => s.feesPaid).length %></h3>
                            <p>Fees Collected</p>
                            <span class="trend positive">
                                <i class="fas fa-arrow-up"></i> <%= Math.round((students.filter(s => s.feesPaid).length / students.length) * 100) || 0 %>%
                            </span>
                        </div>
                    </div>
                    <div class="summary-card">
                        <div class="summary-icon warning">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="summary-content">
                            <h3><%= students.filter(s => !s.feesPaid).length %></h3>
                            <p>Pending Payments</p>
                            <span class="trend negative">
                                <i class="fas fa-arrow-down"></i> <%= Math.round((students.filter(s => !s.feesPaid).length / students.length) * 100) || 0 %>%
                            </span>
                        </div>
                    </div>
                    <div class="summary-card">
                        <div class="summary-icon info">
                            <i class="fas fa-book"></i>
                        </div>
                        <div class="summary-content">
                            <h3><%= [...new Set(students.map(s => s.subject))].length %></h3>
                            <p>Subjects</p>
                            <span class="trend neutral">
                                <i class="fas fa-minus"></i> Active
                            </span>
                        </div>
                    </div>
                </div>

                <div class="students-table-container reveal fade-up">
                    <% if (students.length > 0) { %>
                        <div class="table-wrapper">
                            <table id="studentsTable" class="students-table">
                                <thead>
                                    <tr>
                                        <th class="col-name">
                                            <div class="header-content">
                                                <i class="fas fa-user"></i>
                                                <span>Name</span>
                                            </div>
                                        </th>
                                        <th class="col-email">
                                            <div class="header-content">
                                                <i class="fas fa-envelope"></i>
                                                <span>Email</span>
                                            </div>
                                        </th>
                                        <th class="col-phone">
                                            <div class="header-content">
                                                <i class="fas fa-phone"></i>
                                                <span>Phone</span>
                                            </div>
                                        </th>
                                        <th class="col-grade">
                                            <div class="header-content">
                                                <i class="fas fa-layer-group"></i>
                                                <span>Grade</span>
                                            </div>
                                        </th>
                                        <th class="col-subject">
                                            <div class="header-content">
                                                <i class="fas fa-book"></i>
                                                <span>Subject</span>
                                            </div>
                                        </th>
                                        <th class="col-status">
                                            <div class="header-content">
                                                <i class="fas fa-credit-card"></i>
                                                <span>Status</span>
                                            </div>
                                        </th>
                                        <th class="col-actions">
                                            <div class="header-content">
                                                <i class="fas fa-cogs"></i>
                                                <span>Actions</span>
                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% students.forEach(student => { %>
                                        <tr class="student-row" data-student-id="<%= student._id %>">
                                            <td class="col-name searchable">
                                                <div class="student-info">
                                                    <div class="student-avatar">
                                                        <i class="fas fa-user-graduate"></i>
                                                    </div>
                                                    <div class="student-details">
                                                        <strong class="student-name"><%= student.name %></strong>
                                                        <small class="student-grade"><%= student.grade %></small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="col-email searchable">
                                                <a href="mailto:<%= student.email %>" class="email-link">
                                                    <i class="fas fa-envelope"></i>
                                                    <%= student.email %>
                                                </a>
                                            </td>
                                            <td class="col-phone">
                                                <a href="tel:<%= student.phone %>" class="phone-link">
                                                    <i class="fas fa-phone"></i>
                                                    <%= student.phone %>
                                                </a>
                                            </td>
                                            <td class="col-grade">
                                                <span class="grade-badge"><%= student.grade %></span>
                                            </td>
                                            <td class="col-subject searchable">
                                                <span class="subject-tag"><%= student.subject %></span>
                                            </td>
                                            <td class="col-status">
                                                <span class="status-badge <%= student.feesPaid ? 'paid' : 'unpaid' %>">
                                                    <i class="fas fa-<%= student.feesPaid ? 'check-circle' : 'clock' %>"></i>
                                                    <%= student.feesPaid ? 'Paid' : 'Pending' %>
                                                </span>
                                            </td>
                                            <td class="col-actions">
                                                <div class="action-buttons">
                                                    <a href="/edit/<%= student._id %>" class="btn btn-edit btn-sm" title="Edit Student">
                                                        <i class="fas fa-edit"></i>
                                                        <span class="btn-text">Edit</span>
                                                    </a>
                                                    <form method="POST" action="/students/<%= student._id %>?_method=DELETE" class="delete-form" style="display: inline;">
                                                        <button type="submit" class="btn btn-delete btn-sm" title="Delete Student"
                                                                onclick="return confirmDelete('<%= student.name %>', '/students/<%= student._id %>')">
                                                            <i class="fas fa-trash"></i>
                                                            <span class="btn-text">Delete</span>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="fas fa-user-graduate"></i>
                            <h3>No students found</h3>
                            <p>Start building your student database by adding your first student!</p>
                            <a href="/add" class="btn">
                                <i class="fas fa-plus"></i> Add First Student
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Initialize search functionality
        initializeSearch('searchInput', '.student-row');
    </script>
<%- include('partials/footer') %>